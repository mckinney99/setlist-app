
<%= turbo_frame_tag @setlists_songs do %>
<%= form_with(model: @setlist, id: dom_id(@setlist), url: add_songs_path) do |form| %>
    <div class="field">
    <%= form_tag add_songs_path do %>
      <%= form.label :songs_id, name: "new_setlist_song" %>
      <div class="flex">
        <div class="flex-1">
          <%= form.select @setlist.id, @songs.collect { |song| [song.title, song.id] }, {}, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" }%>
        </div>
        <div class="flex-2 pl-6 ">
          <%= form.submit "Add Song", class: 'py-2 px-8 mr-6 bg-blue-600 hover:bg-blue-700 focus:ring-blue-500 focus:ring-offset-blue-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-full' %>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<% end %>
